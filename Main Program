#include <stdio.h>
#include <windows.h>

int main()
{
	//曲谱数组：每一个数字对应一个频率（音调）Hz
	int Freq[] = { 392, 392, 440, 392, 523, 494, 392, \
		392, 440, 392, 587, 523, 392, 392, 784, 659, \
		523, 494, 440, 698, 698, 659, 523, 587, 523 };

	//频率延迟：每一个频率的发声持续时间 ms
	int Delay[] = { 375, 125, 500, 500, 500, 1000, 375, 125, \
		500, 500, 500, 1000, 375, 125, 500, 500, 500, \
		500, 1000, 375, 125, 500, 500, 500, 1000 };

	//计算曲谱音调数目
	int len = sizeof(Freq) / sizeof(int);

	//循环变量是音调位置，逐个播放
	for (int i = 0; i<len; i++)
	{
		Beep(Freq[i], Delay[i]); //参数表列Beep(int 频率, int 延时)
		if (i == len - 1)            //循环播放处理
		{
			i = 0;
		}

		//伪清屏与显示当前信息
		printf("\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n");
		printf("当前频率: %dHz\n", Freq[i]);
		printf("当前延时: %dms\n", Delay[i]);
	}
}
